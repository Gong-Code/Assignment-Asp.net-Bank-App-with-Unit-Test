@page
@model BankStartWeb.Pages.BankManager.EditCustomerModel
@{
}


<div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-validation">
                                    <form method="post">
                                        <div class="form-group row">
                                            <label asp-validation-for="Givenname" class="col-lg-4 col-form-label" >First name<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input class="form-control" asp-for="Givenname" placeholder="Enter a first name.." /> 
                                                <span asp-validation-for="Givenname" class="field-validation-error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-validation-for="Surname" class="col-lg-4 col-form-label" >Last name<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input class="form-control" asp-for="Surname" placeholder="Enter a last name.." /> 
                                                <span asp-validation-for="Surname" class="field-validation-error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-validation-for="Surname" class="col-lg-4 col-form-label" >Street address<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input class="form-control" asp-for="Streetaddress" placeholder="Enter a street address.." /> 
                                                <span asp-validation-for="Streetaddress" class="field-validation-error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-validation-for="City" class="col-lg-4 col-form-label" >City<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input class="form-control" asp-for="City" placeholder="Enter a city.." /> 
                                                <span asp-validation-for="City" class="field-validation-error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-validation-for="City" class="col-lg-4 col-form-label" >Zipcode<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input class="form-control" asp-for="Zipcode" placeholder="Enter a zipcode.." /> 
                                                <span asp-validation-for="Zipcode" class="field-validation-error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-validation-for="City" class="col-lg-4 col-form-label" >Country code<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <select class="form-control" asp-for="CountryCode" placeholder="Select a country"  asp-items="@Model.AllCountries"></select>
                                                <span asp-validation-for="CountryCode" class="field-validation-error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-validation-for="City" class="col-lg-4 col-form-label" >Country<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <select class="form-control" asp-for="Country" placeholder="Select a country code"  asp-items="@Model.AllCountriesCode"></select>
                                                <span asp-validation-for="Country" class="field-validation-error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-validation-for="City" class="col-lg-4 col-form-label" >National ID<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input class="form-control" asp-for="NationalId" placeholder="Enter a national id.." /> 
                                                <span asp-validation-for="NationalId" class="field-validation-error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-validation-for="City" class="col-lg-4 col-form-label" >Telephone number<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input class="form-control" asp-for="Telephone" placeholder="Enter a telephone number.." /> 
                                                <span asp-validation-for="Telephone" class="field-validation-error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-validation-for="City" class="col-lg-4 col-form-label" >Telephone country code<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input class="form-control" asp-for="TelephoneCountryCode" placeholder="Enter a telephone country code.." /> 
                                                <span asp-validation-for="TelephoneCountryCode" class="field-validation-error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-validation-for="City" class="col-lg-4 col-form-label" >Email<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input class="form-control" asp-for="EmailAddress" placeholder="Enter a email address.." /> 
                                                <span asp-validation-for="EmailAddress" class="field-validation-error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-validation-for="City" class="col-lg-4 col-form-label" >Birthday<span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input class="form-control" asp-for="Birthday" placeholder="Enter a birthday.." /> 
                                                <span asp-validation-for="Birthday" class="field-validation-error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-lg-8 ml-auto">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>