@page
@model BankStartWeb.Pages.CustomerInfoModel
@{
}


<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="justify-content-center text-center text-purple style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                        <img 
                            src="https://media.istockphoto.com/vectors/chat-bot-robot-avatar-in-circle-round-shape-isolated-on-white-stock-vector-id1250000899?k=20&m=1250000899&s=612x612&w=0&h=StKtSuGQl7tJq8FMO6eLtxpkU9BJY9K6pLQBFSkqgaI="
                            alt="Avatar"
                            class="img-fluid my-5"
                            style="width: 200px;"
                        />
                        <h2><strong style="color: #843cf6">@Model.Givenname @Model.Surname</strong></h2>
                        <p>Customer</p>
                        <box-icon type='solid' name='edit'></box-icon>
                    </div>
                    <hr class="mt-0 mb-4">
                    <div class="table-responsive">
                        <table>
                            <tr>
                                <th class="col-6 mb-3" style="color: #0e4cfd">ID</th>
                                <td class="text-muted">@Model.Id</td>
                            </tr>

                            <tr>
                                <th class="col-6 mb-3" style="color: #0e4cfd">First Name</th>
                                <td class="text-muted">@Model.Givenname</td>
                            </tr>
                            <tr>
                                <th class="col-6 mb-3" style="color: #0e4cfd">Last Name</th>
                                <td class="text-muted">@Model.Surname</td>
                            </tr>
                            <tr>
                                <th class="col-6 mb-3" style="color: #0e4cfd">Street address</th>
                                <td class="text-muted">@Model.Streetaddress</td>
                            </tr>
                            <tr>
                                <th class="col-6 mb-3" style="color: #0e4cfd">City</th>
                                <td class="text-muted">@Model.City</td>
                            </tr>
                            <tr>
                                <th class="col-6 mb-3" style="color: #0e4cfd">Zipcode</th>
                                <td class="text-muted">@Model.Zipcode</td>
                            </tr>
                            <tr>
                                <th class="col-6 mb-3" style="color: #0e4cfd">Country</th>
                                <td class="text-muted">@Model.Country</td>
                            </tr>
                            <tr>
                                <th class="col-6 mb-3 " style="color: #0e4cfd">Country Code</th>
                                <td class="text-muted">@Model.CountryCode</td>
                            </tr>
                            <tr>
                                <th class="col-6 mb-3" style="color: #0e4cfd">NationalId</th>
                                <td class="text-muted">@Model.NationalId</td>
                            </tr>
                            <tr>
                                <th class="col-6 mb-3" style="color: #0e4cfd">Telephone</th>
                                <td class="text-muted">@Model.Telephone</td>
                            </tr>
                            <tr>
                                <th class="col-6 mb-3" style="color: #0e4cfd">Telephone Country Code</th>
                                <td class="text-muted">@Model.TelephoneCountryCode</td>
                            </tr>
                            <tr>
                                <th class="col-6 mb-3" style="color: #0e4cfd">Email Address</th>
                                <td class="text-muted">@Model.EmailAddress</td>
                            </tr>
                            <tr>
                                <th class="col-6 mb-3" style="color: #0e4cfd">Birthday</th>
                                <td class="text-muted">@Model.Birthday</td>
                            </tr>
                        </table>
                        <hr class="mt-0 mb-4">
                        <table class="table header-border table-hover verticle-middle">
                            <thead>
                            <tr>
                                <th>Account type</th>
                                <th>Balance</th>
                                <th>Created</th>

                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var account in Model.Accounts)
                            {
                                <tr>
                                    <td style="color: #fd7e14">@account.AccountType</td>
                                    <td style="color: #6fd96f">@account.Balance$</td>
                                    <td style="color: #11cdef">@account.Created</td>
                                    <td>
                                        <button type="button" class="btn mb-1 btn-primary" >
                                            <a style="color: white" asp-route-id="@Model.Id" asp-page="/AccountManager/TransactionList">Transactions</a>
                                        </button>
                                    </td>
                                    <td>
                                        <button type="button" class="btn mb-1 btn-success" >
                                            <a style="color: white" asp-route-id="@account.Id" asp-page="/AccountManager/Deposit">Deposit</a>
                                        </button>
                                    </td>
                                    <td>
                                        <button type="button" class="btn mb-1 btn-danger" >
                                            <a style="color: white" asp-route-id="@account.Id" asp-page="/AccountManager/Withdrawal">Withdrawal</a>
                                        </button>
                                    </td>
                                </tr>
                            }
                            <tr>
                                <th>Total Balance</th>
                                <td style="color: #2dce89">
                                    @Model.TotalBalance$
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



