@page
@model BankStartWeb.Pages.AccountManager.TransferModel
@{
}

<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-5 ">
            <div class="bg-white p-5 rounded mt-5">
                <h1>Transfer</h1>
                <form method="post">
                    
                    <div class="form-group">
                        <label class="d-flex" asp-for="AccountOne">From Account</label>
                        <select asp-for="AccountOne" asp-items="@Model.AllAccounts" class="form-group"></select>
                        <span class="text-danger d-block" asp-validation-for="AccountOne"></span>
                    </div>
                    <div class="form-group">
                        <label class="d-flex" asp-for="AccountTwo">To Account</label>
                        <select asp-for="AccountTwo" asp-items="@Model.AllAccounts" class="form-group"></select>
                        <span class="text-danger d-block" asp-validation-for="AccountTwo"></span>
                    </div>
                    <div class="form-group">
                        <label class="d-flex" asp-for="Amount">Amount</label>
                        <input asp-for="Amount" class="form-group"/>
                        <span class="text-danger d-block" asp-validation-for="Amount"></span>
                    </div>
                    <button class="btn btn-primary btn-round" type="submit" asp-route-customerId="@Model.CustomerId">Transfer</button>
                </form>
            </div>
        </div>
    </div>
</div>